/* category_package/pages/category_list/category_list.wxss */

page{
  background-color: #f2f3f5;
}
/* 顶部搜索 */
.top-box{
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0rpx 4%;
  background-color: #2179FC;
  color: #fff;
  position: relative;
  width: 92%;
}
.top-left{
  display: flex;
  font-size: 26rpx;
  align-items: center;
  /* justify-content: center; */
  flex: 2;
}
.top-left image{
  width: 40rpx;
  height: 40rpx;
}
.address{
  margin-right: 10rpx;
}
.top-right{
  flex:8;
  display: flex;
  font-size: 28rpx;
  color: #aeaeae;
  align-items: center;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  width: auto;
  position: relative;
}
.top-right image{
  width: 30rpx;
  height: 30rpx;
  margin:0rpx 10rpx 0rpx 20rpx;
}
.top-right input{
  width: 420rpx;
  color: #333;
}
.top-right text{
  margin-left: 10rpx;
}
.clear-input{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 10rpx;
  top: 0;
}
.clear-input image{
  width: 40rpx;
  height: 40rpx;
  margin: 0;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
/* 筛选类型 */
.choose-box{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-bottom:2rpx solid #e9e9e9; 
  background-color: #fff;
}
.choose-type{
  color: #E64340;
}
.choose-list{
  width: 33.3333%;
  height: 88rpx;
  font-size: 26rpx;
}
.choose-list image{
  width: 16rpx;
  height: 9rpx;
  margin-left: 10rpx;
}

/* 筛选的项 */
.item-box{
  background-color: #fff;
  padding: 30rpx 3% 0rpx 3%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  position: fixed;
  left: 0;
  top: 178rpx;
  width: 94%;
  max-height: 100000rpx;
  z-index: 5;
}
.choose-item{
  width: 190rpx;
  height: 60rpx;
  border: 2rpx #ccc solid;
  font-size: 26rpx;
  color: #353535;
  margin-bottom: 30rpx;
}
.active{
  border: 2rpx #E64340 solid;
  color: #E64340;
}

/* 选项蒙版 */
.type-mask{
  background:rgba(0, 0, 0, .2);
  position: fixed;
  width: 100%;
  left: 0;
  top: 198rpx;
  z-index: 4;
}

/* 推荐列表 */
.hot-list{
  background-color: #fff;
}
.hot-list:first-of-type{
  margin-top: 20rpx;
}
.list-left image{
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
  margin-right: 20rpx;
}
.bottom-line{
  display: flex;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.list-right{
  width: 460rpx;
}
.list-title{
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 20rpx;
  max-width: 460rpx;
}
.type{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 0rpx;
  color: #808080;
}
.deal-type{
  margin-left: 20rpx;
}
.list-time{
  font-size: 26rpx;
  color: #C8C8C8;
}

.push{
  width: 100%;
  height: 98rpx;
  background-color: #FF6675;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}
