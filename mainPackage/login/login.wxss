/* pages/login/login.wxss */
page{
  overflow: hidden;
}
.login-img{
  width: 100%;
}
.button{
  padding-left:0;
  padding-right:0;
  height:100vh;
}
button{
  border-radius: 0;
}
.login-pro{
  position: fixed;
  left: 50%;
  bottom: 20%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #626465;
  font-size: 28rpx;
  
}
.wx-btn{
  position: fixed;
  left: 50%;
  bottom: 10%;
  transform: translateX(-50%);
  width: 580rpx;
  height: 88rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #09bb07;
  color: #fff;
  font-size: 32rpx;
  margin: 0 auto;
}
.wx-icon{
  width: 49rpx;
  height: 40rpx;
  margin-right: 10rpx;
}