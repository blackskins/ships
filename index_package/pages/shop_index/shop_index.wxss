/* index_package/pages/shop_index/shop_index.wxss */
page{
  background-color: #f2f3f5;
  padding-top:88rpx; 
}
/* 顶部搜索 */
.top-box{
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0rpx 2%;
  background-color: #2179FC;
  color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  width: 96%;
  z-index: 10;
}
.top-left{
  display: flex;
  font-size: 28rpx;
  align-items: center;
  flex: 2;
}
.top-left image{
  width: 40rpx;
  height: 40rpx;
}
.top-right{
  flex:8;
  display: flex;
  font-size: 28rpx;
  color: #aeaeae;
  align-items: center;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  width: auto;
  position: relative;
}
.top-right image{
  width: 30rpx;
  height: 30rpx;
  margin:0rpx 10rpx 0rpx 20rpx;
}
.top-right input{
  width: 420rpx;
  color: #333;
}
.top-right text{
  margin-left: 10rpx;
}
.clear-input{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 10rpx;
  top: 0;
}
.clear-input image{
  width: 40rpx;
  height: 40rpx;
  margin: 0;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
/* 轮播图 */
/* 轮播图 */
.slider,
.slider swiper,
.slider image{
  width:100%;
  height:280rpx;
  background-color: #eeeeee;
}
.ss{
  position: relative;
  border-bottom: 2rpx solid #e9e9e9;
}
.no-img{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 280rpx;
}
/* 导航栏 */
.navList{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  background-color: #fff;
  padding: 10rpx 0rpx;
  overflow: hidden;
  transition: all .5s;
}
.navList view{
  display: flex;
  width:25%;
  height:180rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  color: #353535;
}
.navList .navList-img{
  width:100rpx;
  height:100rpx;
}
.navList .navList-txt{
  margin-top: 8rpx;
}


/* 热门推荐 */
.hot-title{
  padding: 10rpx 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.stick{
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #2179FC;
  margin-right: 10rpx;
}

/* 推荐列表 */
.hot-list{
  background-color: #fff;
}
.list-left image{
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
  margin-right: 20rpx;
}
.bottom-line{
  display: flex;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.list-right{
  width: 460rpx;
}
.list-title{
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 20rpx;
  max-width: 460rpx;
}
.type{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 0rpx;
  color: #808080;
}
.deal-type{
  margin-left: 20rpx;
}
.list-time{
  font-size: 26rpx;
  color: #C8C8C8;
}

/* 查看更多 */
.read-more{
  font-size: 26rpx;
  color: #2179FC;
  background-color: #fff;
  padding: 20rpx 0rpx;
}