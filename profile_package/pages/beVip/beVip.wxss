/* profile_package/pages/beVip/beVip.wxss */
page{
  background-color: #F2F3F7;
}
.card-box{
  padding: 30rpx;
  background-color: #fff;
  position: relative;
}
.card image{
  width: 690rpx;
  height: 330rpx;
}
.lock-status{
  font-size: 26rpx;
  color: #fff;
  position: absolute;
  left: 70rpx;
  bottom: 80rpx;
}

/* 会员特权 */
.vip-power{
  padding: 30rpx;
  background-color: #fff;
  margin: 20rpx 0;
}
/* 标签 */
.hot-title{
  background-color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
}
.stick{
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #2179FC;
  margin-right: 20rpx;
}

.vip-detail{
  font-size: 26rpx;
  color: #333333;
  margin-top: 10rpx;
  line-height: 36rpx;
}

/* 会员的列表项 */
.vip-list{
  font-size: 26rpx;
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:2rpx solid #F2F3F7; 
}
.vip-price{
  color: #FF6675;
}

/* 成为会员 */
.be-vip{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #FF6675;
  color: #fff;
  font-size: 28rpx;
  line-height: 98rpx;
  text-align: center;
}


/* 成为会员弹窗 */
.del-mask{
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  z-index: 10;
}
.del-pop{
  width: 580rpx;
  height: 250rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.del-tips{
  padding: 46rpx 0rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.btn-box{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn-box view{
  width: 180rpx;
  height: 66rpx;
  font-size: 26rpx;
  line-height: 66rpx;
  text-align: center;
}
.yes{
  background-color: #2179FC;
  color: #fff;
}
.no{
  border: 2rpx solid #666666;
  color: #666666;
}