/* profile_package/pages/vip_pay/vip_pay.wxss */
page{
  background-color: #F2F3F7;
}
.money-box{
  height: 260rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.vip-money{
  font-size: 26rpx;
  color: #333333;
}
.money{
  font-size: 40rpx;
  margin-top: 20rpx;
  font-weight: 600;
}
.money text{
  font-size: 26rpx;
  margin-right:4rpx;
}

.business{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.title{
  font-size: 26rpx;
  font-weight: 600;
}

.pay{
  margin: 50rpx 30rpx;
  height: 88rpx;
  background-color: #FF6675;
  color: #fff;
  font-size: 26rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}