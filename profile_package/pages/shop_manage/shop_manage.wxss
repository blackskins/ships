/* profile_package/pages/shop_manage/shop_manage.wxss */

page{
  background-color: #F2F3F7;
}

.person-info{
  height: 328rpx;
  background-color: #ccc;
  position: relative;
}
.bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 328rpx;
}
.info{
  position: relative;
  z-index: 5;
}
.avatar-box{
  padding: 20rpx 0rpx 10rpx 0rpx;
  justify-content: center;
  align-items: baseline;
  display: flex;
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.id{
  width: 48rpx;
  height: 48rpx;
}
.user-name{
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}
.vip-type{
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #FF8281;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  margin: 0rpx auto;
}

/* 我的选项 */
.my-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding: 0rpx 30rpx;
  background-color: #fff;
}
.my-left{
  display: flex;
}
.my-title{
  font-size: 28rpx;
  margin-left: 20rpx;
}
.icon image{
  width: 36rpx;
  height: 36rpx;
}
.my-right image{
  width: 14rpx;
  height: 27rpx;
}

.line{
  border-bottom: 2rpx solid #e9e9e9;
}
