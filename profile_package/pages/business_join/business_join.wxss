/* 我的审核 */
.check-box{
  display: flex;
  align-items: center;
  position: relative;
}
.my-check{
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #919294;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  position: absolute;
  right: 30rpx;
  top:90rpx;
}
.red-point{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 0;
  top: 10rpx;
  border-radius: 50%;
  background-color: #FF4747;
}
.push-check{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF4747;
}