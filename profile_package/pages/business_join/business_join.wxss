/* profile_package/pages/business_join/business_join.wxss */
page{
  background-color: #F2F3F7;
}
.list-box{
  background-color: #fff;
  margin-top: 20rpx;
}
.list{
  display: flex;
  margin-left: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.list:last-child{
  border:none;
}
.left{
  font-size: 28rpx;
  width: 160rpx;
}
.input input{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333333;
  width: 520rpx;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}

/* 上传相关文件 */
.upload-box{
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333333;
  padding: 30rpx;
}
.upload-img{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.id0{
  position: relative;
  width: 330rpx;
  height: 200rpx;
  /* background-color: #ccc; */
  margin-top: 20rpx;
}
.id0-img{
  width: 330rpx;
  height: 200rpx;
}
.id0-img{
  width: 330rpx;
  height: 200rpx;
}
.del-btn{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
}

/* 我的审核 */
.check-box{
  display: flex;
  align-items: center;
  position: relative;
}
.my-check{
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #919294;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  position: absolute;
  right: 30rpx;
  top:90rpx;
}
.red-point{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 0;
  top: 10rpx;
  border-radius: 50%;
  background-color: #FF4747;
}
.push-check{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF4747;
}
.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}
/* 删除弹窗 */
.del-mask{
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  z-index: 10;
}
.del-pop{
  width: 580rpx;
  height: 250rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.del-tips{
  padding: 46rpx 0rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.btn-box{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn-box view{
  width: 180rpx;
  height: 66rpx;
  font-size: 26rpx;
  line-height: 66rpx;
  text-align: center;
}
.yes{
  background-color: #FF6675;
  color: #fff;
}
.no{
  border: 2rpx solid #666666;
  color: #666666;
}