<!--shopManage_package/pages/edit_goods/edit_goods.wxml-->

<view class='title'>
  <view class='title-txt'>分类：</view>
  <view class='input category'>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">{{shopType == true ?array[index]:'请选择分类'}}</picker>
  </view>
</view>
<view class='title'>
  <view class='title-txt'>推荐：</view>
  <view class='input recommend'>
    <view class='tui-tips'>请选择是否加为推荐</view>
    <switch color='#2179FC'></switch>
  </view>
</view>
<view class='title'>
  <view class='title-txt'>标题：</view>
  <view class='input'>
    <input type='text' maxlength='14' placeholder-class='holder' placeholder='请填写发布信息名称'></input>
  </view>
</view>

<!-- 上传轮播图 -->
<view class='slider-box'>
  <view class='slider-title'>
    <view class='left'>上传轮播图：</view>
    <view class='right'>最多上传四张图片</view>
  </view>
  <view class='img-box'>
    <view class='img' wx:for='{{imgUrl}}' wx:key=''>
      <image class='showImg' src='{{ item }}'  data-index="{{index}}" bindtap="previewImg"></image>
      <image class='del' src='../../images/del.png' bindtap='del'></image>
    </view>
    <view class='add-img' wx:if='{{ imgUrl.length < 4 }}' bindtap='upload'></view>
  </view>
</view>

